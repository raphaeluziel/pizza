[Unit]
Description=Gunicorn instance to serve pizza
After=network.target

[Service]
User=raphaeluziel
Group=www-data
WorkingDirectory=/home/raphaeluziel/pizza
Environment="PATH=/home/raphaeluziel/pizza/venv/bin"
ExecStart=/home/raphaeluziel/pizza/venv/bin/gunicorn --access-logfile - --workers 1 --bind unix:/home/raphaeluziel/pizza/pizza.sock pizza.wsgi:application

[Install]
WantedBy=multi-user.target
